<script>
(function() {
  'use strict';

  var answers = {};
  var totalQs = 69;

  /* ── Progress ── */
  function updateProgress() {
    var count = Object.keys(answers).length;
    var pct = Math.round((count / totalQs) * 100);
    document.getElementById('ndProgressFill').style.width = pct + '%';
    document.getElementById('ndProgressText').textContent = count + ' of ' + totalQs + ' answered';
    var wrap = document.querySelector('.nd-progress-bar-wrap');
    if (wrap) wrap.setAttribute('aria-valuenow', pct);
  }

  /* ── Radio change listener ── */
  var root = document.getElementById('nd-root');
  root.addEventListener('change', function(e) {
    if (e.target && e.target.type === 'radio') {
      var name = e.target.name;
      var num = parseInt(name.replace('ndq', ''), 10);
      answers[num] = parseInt(e.target.value, 10);

      // Remove nd-selected from all labels in this question group
      var groupLabels = document.querySelectorAll('label[for^="' + name + '"]');
      for (var l = 0; l < groupLabels.length; l++) {
        groupLabels[l].className = groupLabels[l].className.replace(' nd-selected', '').replace('nd-selected', '').trim();
      }
      // Add nd-selected to the chosen label
      var chosenLabel = document.querySelector('label[for="' + e.target.id + '"]');
      if (chosenLabel) chosenLabel.className += ' nd-selected';

      // Mark card as answered
      var card = document.querySelector('.nd-question-card[data-q="' + num + '"]');
      if (card) card.className = 'nd-question-card nd-answered';
      updateProgress();
    }
  });

  /* ── Keyboard: allow Space/Enter on focused labels ── */
  root.addEventListener('keydown', function(e) {
    if ((e.key === ' ' || e.key === 'Enter') && e.target.tagName === 'LABEL') {
      e.preventDefault();
      var forId = e.target.getAttribute('for');
      var radio = document.getElementById(forId);
      if (radio) {
        radio.checked = true;
        radio.dispatchEvent(new Event('change', { bubbles: true }));
      }
    }
  });

  /* ── Dimension map from DOM ── */
  function getDimMap() {
    var cards = document.querySelectorAll('.nd-question-card');
    var map = [];
    for (var i = 0; i < cards.length; i++) {
      map.push(cards[i].getAttribute('data-dim') || '');
    }
    return map;
  }

  /* ── Scoring
       Each dimension uses its own max (sum of 5 × questions tagged with that dim).
       Overall = average of the three dimension percentages — same scale, no double-count skew.
  ── */
  function calcScores() {
    var dimMap = getDimMap();
    var sT = 0, sM = 0, dT = 0, dM = 0, nT = 0, nM = 0;

    for (var i = 0; i < dimMap.length; i++) {
      var qn = i + 1;
      var val = answers[qn] || 0;
      var dim = dimMap[i];
      if (dim.indexOf('A') !== -1) { sT += val; sM += 5; }
      if (dim.indexOf('U') !== -1) { dT += val; dM += 5; }
      if (dim.indexOf('O') !== -1) { nT += val; nM += 5; }
    }

    var sPct = sM > 0 ? Math.round((sT / sM) * 100) : 0;
    var dPct = dM > 0 ? Math.round((dT / dM) * 100) : 0;
    var nPct = nM > 0 ? Math.round((nT / nM) * 100) : 0;
    // Overall = mean of dimension percentages (equal weighting, avoids cross-dim inflation)
    var oPct = Math.round((sPct + dPct + nPct) / 3);

    return {
      spark:    { total: sT, max: sM, pct: sPct },
      depth:    { total: dT, max: dM, pct: dPct },
      sentinel: { total: nT, max: nM, pct: nPct },
      overall:  { pct: oPct }
    };
  }

  function getLevel(pct) {
    if (pct < 25) return 'Minimal';
    if (pct < 45) return 'Mild';
    if (pct < 65) return 'Moderate';
    if (pct < 80) return 'Strong';
    return 'Very Strong';
  }

  function getDimDesc(name, pct) {
    if (name === 'spark') {
      if (pct < 25) return 'Your attention and impulse patterns are broadly typical. You probably find it relatively easy to stay on task and regulate your energy levels without needing to think much about it.';
      if (pct < 45) return 'You show some Spark traits. You may occasionally struggle with focus, impulsivity, or restlessness, but these don\'t tend to dominate your daily experience.';
      if (pct < 65) return 'You have a moderate Spark profile. Attention regulation, time management, and impulse control are likely ongoing themes. You probably have developed workarounds but find that they take conscious effort.';
      if (pct < 80) return 'Your Spark profile is strong. The rapid-fire ideation, time blindness, emotional intensity, and restlessness are probably very familiar. You likely need external structure and deliberate strategies to manage daily demands, but this wiring also gives you creative energy most people can\'t access.';
      return 'Your Spark profile is very strong. Your mind moves fast, generates connections constantly, and finds routine genuinely painful. You have likely struggled with conventional structures throughout your life, but you also bring extraordinary creative and divergent thinking capacity.';
    }
    if (name === 'depth') {
      if (pct < 25) return 'Your social communication, sensory processing, and preference for routine are broadly typical.';
      if (pct < 45) return 'You show some Depth traits. You may have a few intense interests, some sensory sensitivities, or occasional difficulty reading social cues.';
      if (pct < 65) return 'You have a moderate Depth profile. Pattern recognition, deep focus on specific interests, sensory sensitivities, and a preference for predictability are likely noticeable themes.';
      if (pct < 80) return 'Your Depth profile is strong. You probably experience the world with unusual intensity and detail. Deep interests, strong sensory preferences, and a need for predictable structure are likely central to how you function.';
      return 'Your Depth profile is very strong. Your perceptual and cognitive processing is likely quite different from the typical population. You bring extraordinary analytical and observational abilities, but may find everyday social and sensory environments genuinely draining.';
    }
    if (name === 'sentinel') {
      if (pct < 25) return 'Your anxiety and compulsive patterns are broadly typical. Most people experience some worry and checking behaviour, and yours falls within the expected range.';
      if (pct < 45) return 'You show some Sentinel traits. Occasional intrusive thoughts, checking behaviours, or anxiety-driven rituals may be present but are probably manageable.';
      if (pct < 65) return 'You have a moderate Sentinel profile. You probably experience recurring anxiety patterns, some compulsive behaviours, and intrusive thoughts that take effort to manage.';
      if (pct < 80) return 'Your Sentinel profile is strong. Anxiety-driven patterns, intrusive thoughts, compulsive checking or rituals, and perfectionism are probably significant features of your daily experience.';
      return 'Your Sentinel profile is very strong. Intrusive thoughts, compulsive behaviours, and anxiety-driven rituals are probably consuming significant time and energy. A clinician who specialises in anxiety and compulsive patterns can make a substantial difference.';
    }
    return '';
  }

  /* ── Combos — fixed: pair combos and triple combo are mutually exclusive display ── */
  function getCombos(scores) {
    var combos = [];
    var s = scores.spark.pct;
    var d = scores.depth.pct;
    var n = scores.sentinel.pct;
    var allThree = (s >= 45 && d >= 45 && n >= 45);

    // Only show "All Three" if all are elevated — skip individual pairs in that case to avoid repetition
    if (allThree) {
      combos.push({ title: 'All Three Together', text: 'Having significant scores across all three dimensions means your internal experience is rich, complex, and often contradictory. But this triple wiring also means you have access to a remarkable range of perceptual, creative, and analytical capabilities. Understanding how these interact is key to working with your brain rather than against it.' });
    } else {
      if (s >= 45 && d >= 45) {
        combos.push({ title: 'Spark + Depth', text: 'This combination is sometimes called AuDHD. You likely experience rapid-fire ideation alongside deep, focused interests. The tension between novelty-seeking and sameness-seeking can be confusing but also extraordinarily productive when both are channelled well.' });
      }
      if (s >= 45 && n >= 45) {
        combos.push({ title: 'Spark + Sentinel', text: 'Impulsivity meets anxiety-driven caution. You might act on impulse and then ruminate intensely about whether you did the right thing. This push-pull dynamic is exhausting but, when understood, can produce both creativity and thoroughness.' });
      }
      if (d >= 45 && n >= 45) {
        combos.push({ title: 'Depth + Sentinel', text: 'Deep pattern recognition combines with a threat-detection system that flags everything. You may notice details others miss and then worry intensely about what they mean. Understanding which patterns serve you and which are anxiety-driven is key.' });
      }
    }

    // If only one dimension is elevated, note the dominant one
    if (combos.length === 0 && (s >= 45 || d >= 45 || n >= 45)) {
      var dom = 'Spark'; var dp = s;
      if (d > dp) { dom = 'Depth'; dp = d; }
      if (n > dp) { dom = 'Sentinel'; }
      combos.push({ title: 'Predominantly ' + dom, text: 'Your profile is primarily shaped by one dimension. Focus your energy on learning about this specific dimension and building supports that address its particular challenges and leverage its strengths.' });
    }

    return combos;
  }

  /* ── Show results ── */
  function showResults() {
    var scores = calcScores();
    document.getElementById('ndOverallScore').textContent = scores.overall.pct + '%';

    var dc = document.getElementById('ndDimensions');
    dc.innerHTML = '';

    var dims = [
      { key: 'spark',    label: 'The Spark',    sub: 'ADHD-related traits',               cls: 'nd-spark',    data: scores.spark },
      { key: 'depth',    label: 'The Depth',    sub: 'Autism-related traits',              cls: 'nd-depth',    data: scores.depth },
      { key: 'sentinel', label: 'The Sentinel', sub: 'Anxiety &amp; compulsive patterns', cls: 'nd-sentinel', data: scores.sentinel }
    ];

    for (var i = 0; i < dims.length; i++) {
      var d = dims[i];
      var bl = document.createElement('div');
      bl.className = 'nd-dimension-block ' + d.cls;

      // Header row
      var hd = document.createElement('div');
      hd.className = 'nd-dimension-header';
      hd.innerHTML =
        '<div><span class="nd-dimension-name">' + d.label + '</span><br />' +
        '<span class="nd-dimension-sub">' + d.sub + '</span></div>' +
        '<span class="nd-dimension-pct">' + d.data.pct + '%</span>';
      bl.appendChild(hd);

      // Bar
      var bt = document.createElement('div');
      bt.className = 'nd-dimension-bar-track';
      var bf = document.createElement('div');
      bf.className = 'nd-dimension-bar-fill';
      bf.style.width = '0%';
      bt.appendChild(bf);
      bl.appendChild(bt);

      // Level badge
      var lv = document.createElement('span');
      lv.className = 'nd-dimension-level';
      lv.textContent = getLevel(d.data.pct);
      bl.appendChild(lv);

      // Description
      var ds = document.createElement('p');
      ds.className = 'nd-dimension-desc';
      ds.textContent = getDimDesc(d.key, d.data.pct);
      bl.appendChild(ds);

      dc.appendChild(bl);

      // Animate bar after paint
      (function(fill, pct) {
        setTimeout(function() { fill.style.width = pct + '%'; }, 80);
      })(bf, d.data.pct);
    }

    // Combos
    var cc = document.getElementById('ndCombos');
    var combos = getCombos(scores);
    if (combos.length > 0) {
      var ch = '<div class="nd-combo-section-title">How Your Dimensions Interact</div>';
      for (var c = 0; c < combos.length; c++) {
        ch += '<div class="nd-combo-block"><div class="nd-combo-block-title">' + combos[c].title + '</div>' +
              '<p class="nd-combo-block-text">' + combos[c].text + '</p></div>';
      }
      cc.innerHTML = ch;
      cc.style.display = 'block';
    } else {
      cc.style.display = 'none';
    }

    // Show overlay, lock scroll
    document.getElementById('nd-results-overlay').className = 'nd-visible';
    document.body.style.overflow = 'hidden';

    // Focus management for accessibility
    var closeBtn = document.getElementById('ndCloseBtn');
    if (closeBtn) setTimeout(function() { closeBtn.focus(); }, 100);
  }

  /* ── CSV export ── */
  function buildCSV() {
    var dimMap = getDimMap();
    var scores = calcScores();
    var h = ['Name'];
    for (var i = 1; i <= totalQs; i++) h.push('Q' + i);
    h.push('Spark%', 'Depth%', 'Sentinel%', 'Overall%');

    var dr = ['Dimension'];
    for (var j = 0; j < dimMap.length; j++) {
      var raw = dimMap[j];
      var parts = [];
      if (raw.indexOf('A') !== -1) parts.push('A');
      if (raw.indexOf('U') !== -1) parts.push('U');
      if (raw.indexOf('O') !== -1) parts.push('O');
      dr.push(parts.join('/'));
    }
    dr.push('', '', '', '');

    var sr = ['Your Name Here'];
    for (var k = 1; k <= totalQs; k++) sr.push(answers[k] || 0);
    sr.push(scores.spark.pct, scores.depth.pct, scores.sentinel.pct, scores.overall.pct);

    return h.join(',') + '\n' + dr.join(',') + '\n' + sr.join(',');
  }

  /* ── Close overlay helper ── */
  function closeOverlay() {
    document.getElementById('nd-results-overlay').className = '';
    document.body.style.overflow = '';
    window.scrollTo({ top: 0, behavior: 'smooth' });
  }

  /* ── Submit ── */
  document.getElementById('ndSubmitBtn').addEventListener('click', function() {
    if (Object.keys(answers).length < totalQs) {
      var el = document.getElementById('ndErrorMsg');
      el.style.display = 'block';
      setTimeout(function() { el.style.display = 'none'; }, 5000);
      // Scroll to first unanswered question
      for (var i = 1; i <= totalQs; i++) {
        if (!answers[i]) {
          var c = document.querySelector('.nd-question-card[data-q="' + i + '"]');
          if (c) c.scrollIntoView({ behavior: 'smooth', block: 'center' });
          break;
        }
      }
      return;
    }
    showResults();
  });

  /* ── Close buttons ── */
  document.getElementById('ndCloseBtn').addEventListener('click', closeOverlay);
  document.getElementById('ndCloseBtn2').addEventListener('click', closeOverlay);

  /* ── Trap focus inside overlay when open ── */
  document.getElementById('nd-results-overlay').addEventListener('keydown', function(e) {
    if (e.key === 'Escape') closeOverlay();
  });

  /* ── Copy CSV ── */
  document.getElementById('ndCopyCSVBtn').addEventListener('click', function() {
    var csv = buildCSV();
    var btn = this;
    var original = btn.textContent;
    if (navigator.clipboard && navigator.clipboard.writeText) {
      navigator.clipboard.writeText(csv).then(function() {
        btn.textContent = '✓ Copied! Paste into spreadsheet';
        setTimeout(function() { btn.textContent = original; }, 3000);
      }).catch(function() { fallbackCopy(csv, btn, original); });
    } else {
      fallbackCopy(csv, btn, original);
    }
  });

  function fallbackCopy(text, btn, original) {
    var ta = document.createElement('textarea');
    ta.value = text;
    ta.style.position = 'fixed';
    ta.style.opacity = '0';
    document.body.appendChild(ta);
    ta.select();
    try { document.execCommand('copy'); } catch(e) {}
    document.body.removeChild(ta);
    btn.textContent = '✓ Copied! Paste into spreadsheet';
    setTimeout(function() { btn.textContent = original; }, 3000);
  }

  /* ── Retake ── */
  document.getElementById('ndRetakeBtn').addEventListener('click', function() {
    closeOverlay();
    answers = {};

    var radios = document.querySelectorAll('#nd-root input[type="radio"]');
    for (var r = 0; r < radios.length; r++) radios[r].checked = false;

    // Clear all selected label highlights
    var allLabels = document.querySelectorAll('#nd-root .nd-likert label');
    for (var l = 0; l < allLabels.length; l++) {
      allLabels[l].className = allLabels[l].className.replace(' nd-selected', '').replace('nd-selected', '').trim();
    }

    var cards = document.querySelectorAll('#nd-root .nd-question-card');
    for (var q = 0; q < cards.length; q++) cards[q].className = 'nd-question-card';

    updateProgress();
  });

})();
</script>
</body>
</html>
