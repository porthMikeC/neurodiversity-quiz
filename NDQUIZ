<!-- ═══ RESULTS OVERLAY ═══ -->
<div id="nd-results-overlay" role="dialog" aria-modal="true" aria-labelledby="ndResultsTitle">
  <div class="nd-results-panel">
    <button class="nd-results-close" id="ndCloseBtn" aria-label="Close results">&times;</button>
    <div class="nd-results-title" id="ndResultsTitle">Your Neurodiversity Profile</div>
    <div class="nd-results-overall-label">Overall Trait Score</div>
    <div class="nd-results-overall-score" id="ndOverallScore">0%</div>
    <div class="nd-results-overall-note">Average across all three dimensions (weighted equally)</div>
    <div id="ndDimensions"></div>
    <div id="ndCombos" class="nd-combo-section"></div>
